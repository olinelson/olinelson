---
layout: default
---

<main class="container">
  <section class="header">
    <img src="/images/profile.jpg">
    <hgroup>
      <h1>Oli Nelson</h1>
      <p>Drummer + Indie Software Developer</p>
    </hgroup>
  </section>

  <section>
    <h4>Services</h4>
    <ul>
      <li>Software development</li>
      <li>Drum Lessons</li>
      <li>Coding / Programming Lessons</li>
    </ul>
  </section>

  <section>
    <a href="https://world.hey.com/olivernelson" target="_blank" class="contrast">
      <h4>Blog</h4>
    </a>
    <% site.data["blog_post_previews"].each do |p| %>

      <%= link_to  p["link"], target: "_blank", class:"contrast" do %>
        <article>
          <hgroup>
            <h5><%= p["title"] %></h5>
            <p><%= p["published"] %></p>
          </hgroup>
          <p><%= p["preview"] %>
            <%= link_to "read more", p["link"], target: "_blank" %></p>
        </article>
      <% end %>
    <% end %>
  </section>

  <section id="email-list">
    <h4>Email list</h4>
    <a href="https://world.hey.com/olivernelson" target="_blank" role="button">Signup</a>
  </section>

  <section>
    <h4>Links</h4>

    <article>
      <%= render "icons/envelope" %>
      <span>olivernelson@hey.com</span>
    </article>

    <a href="https://github.com/olinelson" target="_blank" class="contrast">
      <article>
        <%= render "icons/github" %>
        <span>Github</span>
      </article>
    </a>

    <a href="https://x.com/o_j_nelson" target="_blank" class="contrast">
      <article>
        <%= render "icons/x" %>
        <span>/ Twitter</span>
      </article>
    </a>

    <a
      href="https://open.spotify.com/playlist/02iL2Vi9ONfgVKVG5DfGYz?si=bd53fa2abd8d4f5a"
      class="contrast"
      target="_blank"
    >
      <article>
        <%= render "icons/music-note" %>
        <span>Music</span>
      </article>
    </a>

    <article>
      <details>
        <summary>Misc</summary>
        <p>
          <a href="https://pianobeachstorybook.com" target="_blank">Piano Beach: Simple Piano + Story for Kids</a>
        </p>
        <p>
          <a href="https://allhandspianoacademy.com" target="_blank">All Hands Piano Academy</a>
        </p>
      </details>
    </article>
  </section>
</main>
