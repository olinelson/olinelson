---
import Mail from '../icons/mail.astro'
import BrandGithub from '../icons/brandGithub.astro'
import BrandX from '../icons/brandX.astro'
import BrandSpotify from '../icons/brandSpotify.astro'
import DefaultLayout from '../layouts/default.astro'
import profileImage from '../assets/images/profile.jpg'
import { Image } from 'astro:assets'
import BlogPreview from '../components/blogPreview.astro'
import WaveSine from '../icons/waveSine.astro'
---
<DefaultLayout>
<main class="container">
  <section class="header">
      <Image alt="Oli Nelson" src={profileImage}/>
    <hgroup>
      <h1>Oli Nelson</h1>
      <p>Indie Software Developer / Drummer</p>
    </hgroup>
  </section>


  <section>
    <h4>Links</h4>

    <a href="https://maestrocast.com" target="_blank" class="contrast">
      <article>
        <WaveSine />
        <span>Maestrocast</span>
      </article>
    </a>


    <a href="https://github.com/olinelson" target="_blank" class="contrast">
      <article>
        <BrandGithub />
        <span>Github</span>
      </article>
    </a>

    <a href="https://x.com/o_j_nelson" target="_blank" class="contrast">
      <article>
          <BrandX />
        <span>/ Twitter</span>
      </article>
    </a>

    <a
      href="https://open.spotify.com/playlist/02iL2Vi9ONfgVKVG5DfGYz?si=bd53fa2abd8d4f5a"
      class="contrast"
      target="_blank"
    >
      <article>
          <BrandSpotify />
        <span>Music</span>
      </article>
    </a>
  </section>

  <a href="https://words.olinelson.com" target="_blank" class="contrast">
    <article>
      <span>Blog</span>
    </article>
  </a>

  <article>
    <a href="mailto:olivernelson@hey.com" target="_blank" class="contrast">
    <Mail />
      Email me
    </a>
  </article>



  <article>
        <header>Newsletter</header>
        <p>Would you like my ramblings and modern day musings straight to your inbox?</p>
         <form class="email-form" data-email-status-value="ready" data-controller="email" data-action="email#submit:prevent" action="https://assets.mailerlite.com/jsonp/1481436/forms/153508920103535703/subscribe" data-code="" method="post" >
             <fieldset role="group">
                <input type="email" data-email-target="input" class="form-control" data-inputmask="" name="fields[email]" placeholder="Enter your email" autocomplete="email">
                <button type="submit" class="primary" data-email-target="button">Subscribe</button>
             </fieldset>
             <p class="success">Got it, thanks!</p>
             <small class="failure">Something went wrong... Please try again</small>
           <input type="hidden" name="ml-submit" value="1">
           <input type="hidden" name="anticsrf" value="true">
         </form>
  </article>


  <article>
    <details>
      <summary>Misc</summary>
      <p>
        <a href="https://pianobeachstorybook.com" target="_blank">Piano Beach: Simple Piano + Story for Kids</a>
      </p>
      <p>
        <a href="https://allhandspianoacademy.com" target="_blank">All Hands Piano Academy</a>
      </p>
    </details>
  </article>






</main>



</DefaultLayout>

<style is:global>
a.contrast {
  text-decoration: none;
}

.header {
  display: flex;
  gap: 1rem;
  align-items: center;
}
.header > img {
  width: 100px;
  height: 100px;
  border-radius: 1000px;
}

.header > hgroup {
  margin: 0px;
}

.hidden-if-empty:empty {
  display: none;
}

.hidden {
    display: none;
}

.block {
    display: block;
}


.email-form[data-email-status-value="ready"] {
    .success {
        display: none;
    }
    .failure {
        display: none;
    }
}

.email-form[data-email-status-value="submitting"] {
    .success {
        display: none;
    }
    .failure {
        display: none;
    }
}

.email-form[data-email-status-value="error"] {
    .success {
        display: none;
    }
    .failure {
        display: block;
    }
}

.email-form[data-email-status-value="submitted"] {
    .success {
        display: block;
    }
    .failure {
        display: none;
    }
    fieldset {
        display: none;
    }
}

</style>
